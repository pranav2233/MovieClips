<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/actor_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:padding="10dp"
                android:text="@string/actor"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:id="@+id/actor_spinner"
                android:layout_height="wrap_content"
                android:popupBackground="@color/popupBackground"
                android:minWidth="180dp"
                android:layout_marginLeft="20dp"
                android:entries="@array/actor_array">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/director_layout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/actor_layout"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minWidth="80dp"
                android:text="@string/director"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/director_spinner"
                android:popupBackground="@color/popupBackground"
                android:minWidth="180dp"
                android:layout_marginLeft="20dp"
                android:entries="@array/director_array">

            </Spinner>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_button"
            android:background="@drawable/butto_backgound"
            android:text="@string/search"
            android:layout_below="@+id/director_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

</LinearLayout>
